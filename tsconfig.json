{
  "compilerOptions": {
    "target": "es2016", // Suitable for Node.js 14+ compatibility
    "module": "commonjs", // Required for Node.js runtime
    "rootDir": "./src", // Source files are in the src folder
    "outDir": "./dist", // Compiled JavaScript files will go here
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensures consistent file name casing
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skips type checking of declaration files for faster compilation
    "moduleResolution": "node", // Matches Node.js module resolution strategy
    "sourceMap": true // Generates source maps for easier debugging
  },
  "include": ["src/**/*"], // Include all TypeScript files in src
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
}